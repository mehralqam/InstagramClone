<% if params[:controller] === 'posts' %>
  <%= form_with model:[@post, @comment], id: "comments-form" do |f| %>
    <%= render 'comments/form-fields', f: f %>
  <% end  %>
<% else  %>
  <%= form_with model:[@post, @comment], local: true do |f| %>
    <%= render 'comments/form-fields', f: f %>
  <% end  %>
<% end  %>
