<% current_user.followers.each do |follower| %>
  <% follower.posts.each do |post|%>
    <% post.images.each do |image|%>
        <div class="container mt-4 mb-5">
          <div class="d-flex justify-content-center row">
              <div class="col-md-8">
                      <div class="bg-white border mt-2">
                          <div>
                              <div class="d-flex flex-row justify-content-between align-items-center p-2 border-bottom">
                                  <div class="d-flex flex-row align-items-center feed-text px-2"><%= image_tag follower.avatar ,style: 'height:40px;width:40px;'%>
                                      <div class="d-flex flex-column flex-wrap ml-2"><span class="font-weight-bold"><%= follower.user_name %></span><span class="text-black-50 time">40 minutes ago</span></div>
                                  </div>
                              </div>
                          </div>
                          <%= link_to post_path(post.id) do %>
                          <div class="feed-image p-2 px-3"><%= image_tag image ,style: 'height:500px;width:500px;'%></div>
                          <% end %>
                        <% pre_like = post.likes.find { |like| like.user_id == current_user.id} %>
                        <% if pre_like %>
                          <%= button_to 'Unlike', post_like_path(post, pre_like), method: :delete ,class: "fa-thin fa-heart"%>
                          <% else %>
                          <%= button_to 'Like', post_likes_path(post), method: :post %>
                          <% end %>
                          <p class="text-dark"><%= post.likes.count %> </p>
                          <%= link_to 'See All Comments' , post_path(post.id) %>

                      </div>
                  </div>
              </div>
            </div>
        </div>
     <% end %>
  <% end %>
<% end %>

