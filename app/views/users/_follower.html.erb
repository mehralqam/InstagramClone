  <div class="float-right">
   <h4>Suggestions for You</h4>
    <div class="card" style="width: 18rem;">
      <% users.each do |suggest|%>
        <%= image_tag suggest.avatar , width: "200px" , class: "rounded-circle"%>
        <%= suggest.user_name %>
        <% if current_user.followers.exists?(suggest.id)%>
          <button type="button" class="btn btn-secondary" disabled>Followed</button>
          <% else%>
          <%= render_follow_button(suggest) %>
        <% end %>
      <% end %>
    </div>
  </div>
