  <div class="float-right">
   <h4>Suggestions for You</h4>
    <div class="card" style="width: 18rem;">
      <% users.each do |suggest|%>
        <%= image_tag suggest.avatar , width: "200px" , class: "rounded"%>
        <%= suggest.user_name %>
         <% if User.can_follow_users(current_user).exists?(suggest.id)%>
          <%= link_to 'Follow', followships_path(user_id: current_user.id, follower_id: suggest.id), method: :post,class: "btn btn-secondary" , id: "public_follow", remote: true%>
        <% end %>
        <%= render_follow_button(suggest) %>
      <%end%>
    </div>
  </div>
